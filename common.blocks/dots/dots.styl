$orange=#ffa737
.dots
	display inline-block
	position absolute
	right 16px
	top 50%
	transform translate(0, -50%)
	width 40px
	height 50px
	// border 1px solid #000
	cursor pointer
	z-index 99
	&:after
		content ''
		position absolute
		left 50%
		top 50%
		transform translate(-50%, -50%)
		width 0
		height 0
		border 3px solid #555
		border-radius 50%
		box-shadow 0px 9px 0 0px #555, 0px -9px 0 0px #555

	&:hover
		&:after
			border-color $orange
			box-shadow 0px 9px 0 0px $orange, 0px -9px 0 0px $orange